<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_horz_md"
    android:layout_marginRight="@dimen/padding_horz_md"
    android:layout_marginTop="@dimen/padding_vert_md"
    android:layout_marginBottom="@dimen/padding_vert_md"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@color/photo_placeholder" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_item_scrim" />

        <TextView
            android:id="@+id/article_title"
            style="@style/AppTheme.Title"
            android:textStyle="normal"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:ellipsize="end"
            android:maxLines="2" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/AppTheme.SubTitle"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

    </FrameLayout>

</android.support.v7.widget.CardView>
